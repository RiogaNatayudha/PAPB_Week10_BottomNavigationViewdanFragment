<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#DFEDFB"
    android:padding="16dp"
    tools:context=".Playing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, "
            android:textSize="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="left"
            android:textColor="#0064D2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Segera Tayang"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#0064D2"
            android:textSize="28dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="8dp">

                <!-- Item Film 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:id="@+id/cardAyatAyatCinta"
                    app:cardCornerRadius="15dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:padding="8dp">

                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_height="200dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/ayatayatcinta"
                            android:contentDescription="Film 5"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ayat Ayat Cinta"
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"
                            android:textColor="#0064D2"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6 Nov 2023"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"
                            android:textColor="#FF0000" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">
                <!-- Item Film 6 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:id="@+id/cardRatatouille"
                    app:cardCornerRadius="15dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:padding="8dp">

                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_height="200dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/ratatouille"
                            android:contentDescription="Film 6"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ratatouille"
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"
                            android:textColor="#0064D2"
                            android:layout_marginTop="4dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10 Nov 2023"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"
                            android:textColor="#FF0000" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>